<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.coursedesign">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TwentyfourActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.ManualTwentyfoutActivity" />
        <activity android:name=".Activity.SixteenTailModelActivity" />
        <activity android:name=".Activity.MazeActivity" />
        <activity
            android:name=".Activity.HaffmanActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.CrossRiverActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Activity.JDCShowActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>